<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.filet.bioscoopfilet.custom_film_list_item">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeFilet"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:gravity="center">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="109dp"
            android:id="@+id/listFilmImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listFilmTitleId"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="24dp"
                android:text="Jouw Moeder: The Movie"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Genre: Thriller/Horror"
                    android:textStyle=""
                    android:id="@+id/listGenreId" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Age rating: 16"
                    android:id="@+id/listAgeId" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="160dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Versie: 3D NL"
                    android:id="@+id/listVersionId" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="IMDB: 8.8"
                    android:id="@+id/listIMDBId" />
            </LinearLayout>




        </LinearLayout>

</LinearLayout>

</LinearLayout>