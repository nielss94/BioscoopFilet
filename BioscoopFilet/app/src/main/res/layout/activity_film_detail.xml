<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.filet.bioscoopfilet.FilmDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeFilet"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="150dp"
                android:layout_height="193dp"
                android:layout_marginRight="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieTitleDetailId"
                    android:textSize="25dp"
                    android:text="Jouw Moeder: The Movie"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieVersionDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Version: 3D NL" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieReleaseDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Release: 9 januari 2018" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieLengthDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Length: 123 min." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieAgeDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Age rating: 16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieIMDBDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="IMDB: 8.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieTrailerDetailId"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Trailer:" />



            </LinearLayout>






            </LinearLayout>


        
    </LinearLayout>

</LinearLayout>
