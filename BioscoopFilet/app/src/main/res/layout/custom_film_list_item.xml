<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:gravity="center">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="109dp"
            android:id="@+id/listFilmImage"
            android:layout_margin="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listFilmTitleId"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="24dp"
                android:text="Jouw Moeder: The Movie"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Genre: Thriller/Horror"
                    android:textStyle=""
                    android:id="@+id/listGenreId" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Age rating: 16"
                    android:id="@+id/listAgeId" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="140dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="Version: 3D NL"
                    android:id="@+id/listVersionId" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:text="IMDB: 8.8"
                    android:id="@+id/listIMDBId" />
            </LinearLayout>




        </LinearLayout>

</LinearLayout>

</LinearLayout>